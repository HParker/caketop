<h1>Requests</h1>

<table class='table'>
  <thead>
    <tr>
      <th width=20%>Requester</th>
      <th width=70%>Request Content</th>
      <th width=10%>Status</th>
    </tr>
  </thead>
  <tbody>
    <% requests.each do |r| %>
      <tr>
        <td><%= r[0] %></td>
        <td><%= r[1] %></td>
        <td><%= r[2] %></td>
      </tr>
    <% end %>
  </tbody>
</table>
