<h1>Caketop Theater</h1>

<div class="row">
  <div class="col-md-12">
    <legend>New Additions</legend>
    <% movies.each_slice(6) do |slice| %>
      <div class="row" style="padding-bottom:30px">
        <% slice.each do |movie| %>
        <div class="col-md-2 movie-cell" >
          <%= link_to "<img src='https://d3gtl9l2a4fn1j.cloudfront.net/t/p/w500/#{movie[7]}' class='movie-thumb'></img>", "/watch/#{ movie[16] }" %>
          <%= link_to movie[4], "/view/#{movie[2]}" %>
        </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>

<div class="row hidden-xs hidden-sm">
  <div class="col-md-12">
    <legend>Enjoyed by Others</legend>
  </div>
  <% recent[0..5].each do |movie| %>
    <div class="col-md-2 movie-cell">
      <%= link_to "<img src='https://d3gtl9l2a4fn1j.cloudfront.net/t/p/w500/#{movie[11]}' class='movie-thumb'></img>", "/watch/#{ movie[20] }" %>
      <%= link_to movie[8], "/view/#{movie[6]}" %>
    </div>
  <% end %>
</div>
