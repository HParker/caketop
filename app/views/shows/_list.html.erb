<% shows.each do |show| %>
  <div class="row show" style="padding-top:20px;">
    <div class="col-md-2">
      <%= link_to image_tag(show.poster, class: 'movie-thumb'), show %>
    </div>
    <div class="col-md-10">
      <legend id="title"><%= show.name %> <span class="sublegend"><%= show.folder %></span></legend>
      <div class="row">
        <div class="col-md-8">
          <p><%= show.overview %></p>
        </div>
        <div class="col-md-4">
          <table width='100%'>
            <tr>
              <th>First Aired: </th><td><%= show.first_air_date %></td>
            </tr>
            <tr>
              <th>Rating: </th><td><%= "#{ show.vote_average } (#{ show.vote_count } votes)" %></td>
            </tr>
          </table>
        </div>
      </div>
    </div>
  </div>
<% end %>
