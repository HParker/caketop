<div class="jumbotron" style="text-align:center;background-color:#fff">
  <h1>Caketop Theater</h1>
  <p>Chose your adventure...</p>
  <div class="row">
    <div class="col-md-4">
      <%= link_to image_tag('icon_5198.svg', width: '100%'), shows_path %>

      <h2>Television</h2>
      <%= form_tag(shows_search_path, role: 'search') do %>
      <div class="form-group">
        <input type="text" class="form-control" placeholder="Search Television" name="q">
      </div>
      <% end %>

    </div>
    <div class="col-md-4">
      <%= link_to image_tag('icon_1895.svg', width: '100%'), movies_path %>

      <h2>Films</h2>
      <%= form_tag(movies_search_path, role: 'search') do %>
      <div class="form-group">
        <input type="text" class="form-control" placeholder="Search Films" name="q">
      </div>
      <% end %>

    </div>
    <div class="col-md-4">
      <%= image_tag 'icon_2013.svg', width: '100%'  %>

      <h2>Music</h2>
      <%= form_tag('', role: 'search') do %>
      <div class="form-group">
        <input type="text" class="form-control" placeholder="Search Music" name="q">
      </div>
      <% end %>

    </div>
  </div>
</div>
